    <script>
        // üî• –ó–ê–ú–ï–ù–ò–¢–ï –≠–¢–£ –ö–û–ù–§–ò–ì–£–†–ê–¶–ò–Æ –ù–ê –°–í–û–Æ –ò–ó FIREBASE
        const firebaseConfig = {
  apiKey: "AIzaSyD9MIiOsdps10zDZhaNjnkPj--QXX0o8yc",
  authDomain: "messenger-f7cbd.firebaseapp.com",
  databaseURL: "https://messenger-f7cbd-default-rtdb.europe-west1.firebasedatabase.app",
  projectId: "messenger-f7cbd",
  storageBucket: "messenger-f7cbd.firebasestorage.app",
  messagingSenderId: "584298804782",
  appId: "1:584298804782:web:c2fc0a168311aca5ed11bf",
  measurementId: "G-9WT3KHJ4GM"
        };

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Firebase
        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();

        let currentUser = null;
        let currentChatUser = null;
        let messagesListener = null;

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', function() {
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å
            const savedUser = localStorage.getItem('firebase_user');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                checkUserExists(currentUser.code).then(exists => {
                    if (exists) {
                        showChatSection();
                    } else {
                        localStorage.removeItem('firebase_user');
                        showRegistrationSection();
                    }
                });
            } else {
                showRegistrationSection();
            }
        });

        // –ü–æ–∫–∞–∑–∞—Ç—å —Å–µ–∫—Ü–∏—é —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏
        function showRegistrationSection() {
            document.getElementById('registrationSection').style.display = 'block';
            document.getElementById('chatSection').style.display = 'none';
            document.getElementById('headerSubtitle').textContent = '–°–Ω–∞—á–∞–ª–∞ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–π—Ç–µ—Å—å –≤ Firebase!';
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å —Å–µ–∫—Ü–∏—é —á–∞—Ç–∞
        function showChatSection() {
            document.getElementById('registrationSection').style.display = 'none';
            document.getElementById('chatSection').style.display = 'block';
            document.getElementById('headerSubtitle').textContent = `–û–±—â–∞–π—Ç–µ—Å—å, ${currentUser.name}!`;

            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ
            document.getElementById('displayUserName').textContent = currentUser.name;
            document.getElementById('displayUserCode').textContent = currentUser.code;

            // –û–±–Ω–æ–≤–ª—è–µ–º –æ–Ω–ª–∞–π–Ω —Å—Ç–∞—Ç—É—Å
            updateUserOnlineStatus(true);
        }

        // –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        async function checkUserExists(userCode) {
            try {
                const snapshot = await database.ref('users/' + userCode).once('value');
                return snapshot.exists();
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è:', error);
                return false;
            }
        }

        // –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ Firebase
        async function registerUser() {
            const username = document.getElementById('regUsername').value.trim();
            const usercode = document.getElementById('regUserCode').value.trim().toLowerCase();
            const avatarColor = document.getElementById('regAvatar').value;

            if (!username || !usercode) {
                showRegistrationStatus('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è', 'error');
                return;
            }

            if (usercode.length < 3) {
                showRegistrationStatus('–ö–æ–¥ –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –Ω–µ –º–µ–Ω–µ–µ 3 —Å–∏–º–≤–æ–ª–æ–≤', 'error');
                return;
            }

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
            showRegistrationStatus('–ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å –∫–æ–¥–∞...', 'loading');

            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å–≤–æ–±–æ–¥–µ–Ω –ª–∏ –∫–æ–¥
            const userExists = await checkUserExists(usercode);
            if (userExists) {
                showRegistrationStatus('–≠—Ç–æ—Ç –∫–æ–¥ —É–∂–µ –∑–∞–Ω—è—Ç! –í—ã–±–µ—Ä–∏—Ç–µ –¥—Ä—É–≥–æ–π.', 'error');
                return;
            }

            // –†–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–µ–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ Firebase
            try {
                const userData = {
                    name: username,
                    code: usercode,
                    avatarColor: avatarColor,
                    registeredAt: new Date().toISOString(),
                    lastSeen: Date.now(),
                    online: true
                };

                await database.ref('users/' + usercode).set(userData);

                // –°–æ—Ö—Ä–∞–Ω—è–µ–º –ª–æ–∫–∞–ª—å–Ω–æ
                currentUser = userData;
                localStorage.setItem('firebase_user', JSON.stringify(currentUser));

                showRegistrationStatus('‚úÖ –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è —É—Å–ø–µ—à–Ω–∞! –ü–æ–¥–∫–ª—é—á–∞–µ–º—Å—è...', 'success');

                setTimeout(() => {
                    showChatSection();
                    showNotification('üî• –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ artemusheek messenger!');
                }, 1000);

            } catch (error) {
                showRegistrationStatus('–û—à–∏–±–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏: ' + error.message, 'error');
            }
        }

        // –ü–æ–∏—Å–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∏ –Ω–∞—á–∞–ª–æ —á–∞—Ç–∞
        async function checkUserAndStartChat() {
            const targetCode = document.getElementById('targetUserCode').value.trim().toLowerCase();

            if (!targetCode) {
                alert('–í–≤–µ–¥–∏—Ç–µ –∫–æ–¥ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è');
                return;
            }

            if (targetCode === currentUser.code) {
                alert('–ù–µ–ª—å–∑—è –ø–∏—Å–∞—Ç—å —Å–∞–º–æ–º—É —Å–µ–±–µ!');
                return;
            }

            const resultDiv = document.getElementById('userSearchResult');
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = '<div class="loader"></div>';

            try {
                const userExists = await checkUserExists(targetCode);

                if (userExists) {
                    // –ü–æ–ª—É—á–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ
                    const snapshot = await database.ref('users/' + targetCode).once('value');
                    const userInfo = snapshot.val();

                    currentChatUser = targetCode;

                    resultDiv.innerHTML = `
                        <div style="background: #d4edda; padding: 10px; border-radius: 5px;">
                            ‚úÖ –ù–∞–π–¥–µ–Ω –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å: <strong>${userInfo.name}</strong>
                            <button class="btn btn-success" onclick="startChatWithUser('${targetCode}', '${userInfo.name}')" style="margin-left: 10px; padding: 5px 10px;">
                                üí¨ –ù–∞—á–∞—Ç—å —á–∞—Ç
                            </button>
                        </div>
                    `;
                } else {
                    resultDiv.innerHTML = `
                        <div style="background: #f8d7da; padding: 10px; border-radius: 5px;">
                            ‚ùå –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å –∫–æ–¥–æ–º "${targetCode}" –Ω–µ –Ω–∞–π–¥–µ–Ω
                        </div>
                    `;
                }
            } catch (error) {
                resultDiv.innerHTML = `
                    <div style="background: #f8d7da; padding: 10px; border-radius: 5px;">
                        ‚ùå –û—à–∏–±–∫–∞ –ø–æ–∏—Å–∫–∞: ${error.message}
                    </div>
                `;
            }
        }

        // –ù–∞—á–∞—Ç—å —á–∞—Ç —Å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º
        function startChatWithUser(userCode, userName) {
            currentChatUser = userCode;
            document.getElementById('currentChatWith').textContent = `${userName} (${userCode})`;
            document.getElementById('currentChatInfo').style.display = 'block';
            document.getElementById('userSearchResult').style.display = 'none';

            // –ó–∞–≥—Ä—É–∂–∞–µ–º –∏—Å—Ç–æ—Ä–∏—é —Å–æ–æ–±—â–µ–Ω–∏–π
            loadChatHistory();

            // –°–ª—É—à–∞–µ–º –Ω–æ–≤—ã–µ —Å–æ–æ–±—â–µ–Ω–∏—è
            startMessagesListener();

            showNotification(`üí¨ –ß–∞—Ç —Å ${userName} –Ω–∞—á–∞—Ç!`);
        }

        // –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è –≤ Firebase
        async function sendMessage() {
            if (!currentChatUser) {
                alert('–°–Ω–∞—á–∞–ª–∞ –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –¥–ª—è —á–∞—Ç–∞');
                return;
            }

            const messageText = document.getElementById('messageInput').value.trim();

            if (!messageText) {
                alert('–í–≤–µ–¥–∏—Ç–µ —Å–æ–æ–±—â–µ–Ω–∏–µ');
                return;
            }

            try {
                // –°–æ–∑–¥–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
                const message = {
                    id: Date.now(),
                    from: currentUser.code,
                    fromName: currentUser.name,
                    to: currentChatUser,
                    text: messageText,
                    timestamp: Date.now(),
                    avatarColor: currentUser.avatarColor,
                    read: false
                };

                // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ Firebase
                await database.ref('messages').push(message);

                // –û—á–∏—â–∞–µ–º –ø–æ–ª–µ –≤–≤–æ–¥–∞
                document.getElementById('messageInput').value = '';

                // –û–±–Ω–æ–≤–ª—è–µ–º –æ–Ω–ª–∞–π–Ω —Å—Ç–∞—Ç—É—Å
                updateUserOnlineStatus(true);

            } catch (error) {
                alert('–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏: ' + error.message);
            }
        }

        // –°–ª—É—à–∞—Ç–µ–ª—å –Ω–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
        function startMessagesListener() {
            // –£–¥–∞–ª—è–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–π —Å–ª—É—à–∞—Ç–µ–ª—å –µ—Å–ª–∏ –µ—Å—Ç—å
            if (messagesListener) {
                messagesListener();
            }

            messagesListener = database.ref('messages').on('child_added', (snapshot) => {
                const message = snapshot.val();

                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –µ—Å–ª–∏ –æ–Ω–æ –¥–ª—è –Ω–∞—Å –∏–ª–∏ –æ—Ç –Ω–∞—Å –≤ —Ç–µ–∫—É—â–µ–º —á–∞—Ç–µ
                if ((message.to === currentUser.code && message.from === currentChatUser) || 
                    (message.from === currentUser.code && message.to === currentChatUser)) {

                    const isMyMessage = message.from === currentUser.code;
                    addMessageToChat(message, isMyMessage);

                    if (!isMyMessage) {
                        showNotification(`üì® –ù–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç ${message.fromName}`);

                        // –ü–æ–º–µ—á–∞–µ–º –∫–∞–∫ –ø—Ä–æ—á–∏—Ç–∞–Ω–Ω–æ–µ
                        database.ref('messages/' + snapshot.key).update({ read: true });
                    }
                }
            });
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –∏—Å—Ç–æ—Ä–∏–∏ —á–∞—Ç–∞
        async function loadChatHistory() {
            const chatWindow = document.getElementById('chatWindow');
            chatWindow.innerHTML = '<div class="loader"></div>';

            try {
                const snapshot = await database.ref('messages').once('value');
                const allMessages = snapshot.val();
                const chatMessages = [];

                // –§–∏–ª—å—Ç—Ä—É–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è –¥–ª—è —Ç–µ–∫—É—â–µ–≥–æ —á–∞—Ç–∞
                for (let key in allMessages) {
                    const msg = allMessages[key];
                    if ((msg.from === currentUser.code && msg.to === currentChatUser) || 
                        (msg.from === currentChatUser && msg.to === currentUser.code)) {
                        chatMessages.push(msg);
                    }
                }

                // –°–æ—Ä—Ç–∏—Ä—É–µ–º –ø–æ –≤—Ä–µ–º–µ–Ω–∏
                chatMessages.sort((a, b) => a.timestamp - b.timestamp);

                if (chatMessages.length === 0) {
                    chatWindow.innerHTML = `
                        <div style="text-align: center; color: #666; padding: 50px;">
                            <div style="font-size: 48px; margin-bottom: 20px;">üëã</div>
                            <h3>–ù–∞—á–Ω–∏—Ç–µ –¥–∏–∞–ª–æ–≥!</h3>
                            <p>–û—Ç–ø—Ä–∞–≤—å—Ç–µ –ø–µ—Ä–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é</p>
                        </div>
                    `;
                } else {
                    chatWindow.innerHTML = '';
                    chatMessages.forEach(msg => {
                        const isMyMessage = msg.from === currentUser.code;
                        addMessageToChat(msg, isMyMessage);
                    });

                    chatWindow.scrollTop = chatWindow.scrollHeight;
                }
            } catch (error) {
                chatWindow.innerHTML = `
                    <div style="text-align: center; color: #dc3545; padding: 20px;">
                        ‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏–π: ${error.message}
                    </div>
                `;
            }
        }

        // –î–æ–±–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ —á–∞—Ç
        function addMessageToChat(message, isMyMessage) {
            const chatWindow = document.getElementById('chatWindow');

            // –£–±–∏—Ä–∞–µ–º placeholder –ø—Ä–∏ –ø–µ—Ä–≤–æ–º —Å–æ–æ–±—â–µ–Ω–∏–∏
            if (chatWindow.innerHTML.includes('–ù–∞—á–Ω–∏—Ç–µ –¥–∏–∞–ª–æ–≥') || chatWindow.querySelector('.loader')) {
                chatWindow.innerHTML = '';
            }

            const avatarColor = message.avatarColor || '#667eea';
            const initials = message.fromName.charAt(0).toUpperCase();
            const time = new Date(message.timestamp).toLocaleTimeString();

            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isMyMessage ? 'my-message' : 'other-message'}`;

            messageDiv.innerHTML = `
                <div class="message-header">
                    <div class="avatar" style="background: ${avatarColor}">${initials}</div>
                    <div class="message-sender">${message.fromName}</div>
                </div>
                <div class="message-text">${message.text}</div>
                <div class="message-time">${time}</div>
            `;

            chatWindow.appendChild(messageDiv);
            chatWindow.scrollTop = chatWindow.scrollHeight;
        }

        // –û–±–Ω–æ–≤–∏—Ç—å –æ–Ω–ª–∞–π–Ω —Å—Ç–∞—Ç—É—Å
        function updateUserOnlineStatus(online) {
            if (!currentUser) return;

            database.ref('users/' + currentUser.code).update({
                online: online,
                lastSeen: Date.now()
            });
        }

        // –í—ã—Ö–æ–¥ –∏–∑ —Å–∏—Å—Ç–µ–º—ã
        function logout() {
            if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ –≤—ã–π—Ç–∏?')) {
                // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å
                updateUserOnlineStatus(false);

                // –£–¥–∞–ª—è–µ–º —Å–ª—É—à–∞—Ç–µ–ª—å
                if (messagesListener) {
                    messagesListener();
                }

                // –û—á–∏—â–∞–µ–º –¥–∞–Ω–Ω—ã–µ
                currentUser = null;
                currentChatUser = null;
                localStorage.removeItem('firebase_user');

                showRegistrationSection();
                showNotification('üëã –î–æ —Å–≤–∏–¥–∞–Ω–∏—è! –í–æ–∑–≤—Ä–∞—â–∞–π—Ç–µ—Å—å!');
            }
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å —Å—Ç–∞—Ç—É—Å —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏
        function showRegistrationStatus(message, type) {
            const statusDiv = document.getElementById('registrationStatus');
            statusDiv.style.display = 'block';
            statusDiv.textContent = message;

            statusDiv.style.background = type === 'error' ? '#f8d7da' : 
                                       type === 'success' ? '#d4edda' : 
                                       type === 'loading' ? '#fff3cd' : '#f8f9fa';
            statusDiv.style.color = type === 'error' ? '#721c24' : 
                                  type === 'success' ? '#155724' : 
                                  type === 'loading' ? '#856404' : '#333';
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
        function showNotification(text) {
            const notification = document.getElementById('notification');
            notification.textContent = text;
            notification.style.display = 'block';

            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞–∂–∞—Ç–∏—è Enter
        document.getElementById('messageInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        document.getElementById('regUserCode').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                registerUser();
            }
        });

        document.getElementById('targetUserCode').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                checkUserAndStartChat();
            }
        });

        // –û–±–Ω–æ–≤–ª—è–µ–º –æ–Ω–ª–∞–π–Ω —Å—Ç–∞—Ç—É—Å –ø—Ä–∏ –∑–∞–∫—Ä—ã—Ç–∏–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        window.addEventListener('beforeunload', function() {
            if (currentUser) {
                updateUserOnlineStatus(false);
            }
        });
    </script>
</body>
</html>
